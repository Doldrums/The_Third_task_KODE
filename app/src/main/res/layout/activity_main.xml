<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Выберите фигуру для работы:"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/spinner"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="1.0"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="94dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="93dp"
              android:textSize="20sp"
    />
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Начать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_Start"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" android:layout_marginBottom="166dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.constraint.ConstraintLayout>