<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Circle_activity"
android:orientation="vertical">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Радиус фигуры"
            android:id="@+id/txt_Radius"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Координата по оси ОХ"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Координата по оси ОY"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="Рассчитать периметр"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_P"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="Рассчитать площадь"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_S"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
          android:id="@+id/txt_Result"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
</LinearLayout>